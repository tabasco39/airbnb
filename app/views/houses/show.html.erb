<div class='container mt-5 pt-5' style='display:flex'> 
        
    <div class="row">
        
             <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% (0...@house.images.count).map do |image|   %>
                   
                   <% if (image === 0) %>
                       <div class="carousel-item active">
                            <%= image_tag(@house.images[image],width:"500",height:"300") %>
                        </div>
                        <% else %>
                         <div class="carousel-item ">
                            <%= image_tag(@house.images[image],width:"500",height:"300") %>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>

                   <% end %>
              <% end %> 
            </div>
               
            </div>      
       
    </div>
</div>                
  
  </div>
  <hr>
  <div class='container mt-5'>
            <h3><b><%= @house.category.name %></b></h3>
            <ul>
                <li>Localisation: <%= @house.localisation %></li>
                <li>Nombre de chambre: <%= @house.nombre_de_chambre %></li>
                <li>Prix/nuit: <%= @house.prix %> $</li>
               
            </ul>
         <div>
            <%= @house.categorie%>
            <%= link_to 'Edit', edit_house_path(@house) %> |
            <%= link_to 'Back', houses_path %>
            <h3>Reservations</h3>
            <%= render @house.reservations %>
             
            
            <h3>Create a reservation</h3>
            <%= render 'reservations/form' %>
         </div>      

    
  </div> 

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>

  <script type='text/javascript' src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCUWaMMCPH78xqybhSGAYRPjQo7HJi9mBo'></script>
  <script type='text/javascript'>
        function initialize(){
            var location = {lat: <%= @house.latitude %>, lng: <%= @house.longitude %>};
            var map = new google.maps.Map(document.getElementById('map'),{
                center:location,
                zoom:14

            });
        }

        google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</div> 


