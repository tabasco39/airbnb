

<div class='container pt-5 '>
    <div class=row>
        <div class='col-8' style='display:flex;flex-wrap:wrap'>      
                <% @houses.each do |house| %>
                  <div class="card" style="width: 18rem;margin: 20px;border-radius:20px;box-shadow:3px 2px 3px grey">
                    <%= image_tag(house.images[0],height:"180",width:"287",style:'border-radius:20px 20px 10px 10px') %>
                      <div class="card-body">
                      <h6 class="card-title"><%= house.localisation %></h6>
                      <%= link_to 'Regarder',house, class:'btn btn-outline-primary',style:'border-radius:50px' %>
                    </div>
                  </div>
                <% end %>      
        </div>
        <div class='col-4'>
            <div>
                 <%= link_to 'New House', new_house_path,class:'btn btn-primary' %>
            </div>
        </div>
    </div>
</div>