<p> house price one night: <%= @reservation.house.prix %>$</p>
<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: <%=  (@reservation.house.prix * (@reservation.start_time..@reservation.end_time).to_a.size) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="<%= Rails.configuration.stripe[:publishable_key] %>" data-description="A month's subscription" data-amount= <%= (@reservation.house.prix * (@reservation.start_time..@reservation.end_time).to_a.size)* 100 %> data-locale="auto"></script>
<% end %>
